.medium-4.large-3.columns
  %nav.sidebar
    %ul.side-nav.sidebar
      %li.heading
        #{ I18n.t 'meals.title' }
        / Add button has a dropdown menu for each diet.
        %a.fi-plus.tiny.round.success.button.right{ ng: { show: 'session.user.is("chef")' }, dropdown: { toggle: '#diets-dropdown' } }
        %ul#diets-dropdown.f-dropdown
          %li{ ng: { repeat: 'diet in diets' } }
            %a{ ng: { click: 'addMeal(diet)' } } {{diet.name}}
      / Finally loop for each meal.
      %li{ ng: { repeat: 'm in meals', class: '{ active: m.id==selection.meal.id }' } }
        %a{ ui: { sref: 'meals.show({mealId:{{m.id}}})' } } {{m.name}}

.medium-8.large-9.columns
  .row{ ui: { view: 'meal' } }
    .small-12.columns
      %p #{ I18n.t 'meals.no_selection' }
