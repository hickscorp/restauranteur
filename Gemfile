source 'https://rubygems.org'

# Application foundations.
gem 'rails',                '~> 4.2'
gem 'bcrypt'
gem 'bower-rails'
gem 'cancancan'
gem 'rails-i18n'
gem 'http_accept_language'
gem 'responders'
# Domain specific languages.
gem 'haml-rails'
gem 'sass-rails'
gem 'coffee-rails'
# Active model serializers.
gem 'active_model_serializers'
gem 'bulk_insert'

# Client-side / frameworks.
gem 'jquery-rails'
gem 'foundation-rails', '~> 5'
gem 'foundation-icons-sass-rails'
gem 'compass-rails'
gem 'i18n-js'
gem 'uglifier'

# Database stuff.
gem 'pg', '~> 0.21'

group :development, :test do
  # Server.
  gem 'spring'
  # Deployment gems.
  gem 'rvm-capistrano'
end

group :production do
  gem 'libv8'
  gem 'execjs'
  gem 'therubyracer', platforms: :ruby
end
